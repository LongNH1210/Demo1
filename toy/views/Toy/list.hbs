<body>
<div class="card-group text-center" class="border">
   <div class="row">
      {{#each toys }}
      <div class="card col-md-3 m-3">
         <a href="/toylist/detail/{{_id}}">
         <img class="card-img-top mt-3" src="{{ image }}" width="200" height="200">
         </a>
         <div class="card-body">
            <h4 class="card-title text-dark">{{ name }}</h4>
            <h3 class="card-title text-secondary">${{ price }}</h3>
            <p class="fw-bold card-text text-primary">{{ brand }}</p>
            <h6>{{ detail }}</h3>
               <form action="/order" method="post">
                  <input type="hidden" name="id" value="{{_id}}">
                  <input type="hidden" name="price" value="{{price}}">
                  <input class="form-control mb-3" type="number" name="order_quantity" min="1" max="{{quantity}}" value="1">
                  <input class="btn btn-danger" type="submit" value="Order">
               </form>
         </div>
      </div>
      {{/each}}
   </div>
</div>
</body>